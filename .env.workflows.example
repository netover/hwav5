# Resync Environment Configuration
# Copy to .env and configure your values

# Database
DATABASE_URL=postgresql+asyncpg://resync:password@localhost:5432/resync
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# API Keys
API_MASTER_KEY=your-master-key-here-change-this
ADMIN_TOKEN_SECRET=your-admin-secret-key-change-this

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# TWS Configuration
TWS_MASTER_HOST=tws-master.company.com
TWS_MASTER_PORT=31116

# Resync API
RESYNC_API_URL=https://resync.company.com
RESYNC_API_PORT=8000

# Prefect
PREFECT_API_URL=http://localhost:4200/api

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-for-jwt-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["https://resync.company.com"]

# Monitoring
METRICS_RETENTION_DAYS=90
ALERT_EMAIL=ops@company.com

# Feature Flags
ENABLE_WORKFLOWS=true
ENABLE_ENHANCED_MONITORING=true
ENABLE_ADMIN_API=true
