[project]
name = "resync"
version = "5.9.3"
description = "AI-Powered HCL Workload Automation (HWA/TWS) Interface"
readme = "README.md"
license = {text = "MIT"}
requires-python = ">=3.10"
authors = [
    {name = "Resync Team"}
]
keywords = ["hwa", "tws", "workload-automation", "ai", "fastapi"]
classifiers = [
    "Development Status :: 4 - Beta",
    "Framework :: FastAPI",
    "Intended Audience :: System Administrators",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Programming Language :: Python :: 3.13",
    "Topic :: System :: Monitoring",
    "Typing :: Typed",
]

dependencies = [
    # Core Framework
    "fastapi>=0.109.0",
    "uvicorn[standard]>=0.27.0",
    "gunicorn>=21.0.0",
    "pydantic>=2.5.0",
    "pydantic-settings>=2.1.0",
    
    # Database
    "sqlalchemy[asyncio]>=2.0.25",
    "asyncpg>=0.29.0",
    "alembic>=1.13.0",
    
    # Redis
    "redis>=5.0.0",
    
    # HTTP Client
    "httpx>=0.26.0",
    "aiohttp>=3.9.0",
    
    # Security
    "PyJWT>=2.8.0",
    "passlib[bcrypt]>=1.7.4",
    "python-multipart>=0.0.6",
    "cryptography>=42.0.0",
    
    # Observability
    "structlog>=24.1.0",
    "opentelemetry-api>=1.22.0",
    "opentelemetry-sdk>=1.22.0",
    "opentelemetry-instrumentation-fastapi>=0.43b0",
    "opentelemetry-instrumentation-sqlalchemy>=0.43b0",
    "opentelemetry-instrumentation-redis>=0.43b0",
    "opentelemetry-instrumentation-httpx>=0.43b0",
    "opentelemetry-exporter-otlp>=1.22.0",
    "prometheus-fastapi-instrumentator>=6.1.0",
    
    # Rate Limiting
    "slowapi>=0.1.9",
    
    # LLM
    "litellm>=1.20.0",
    "langchain>=0.1.0",
    "langchain-community>=0.0.10",
    "langgraph>=0.0.20",
    "openai>=1.0.0",
    "pybreaker>=1.2.0",
    
    # Utilities
    "tenacity>=8.2.0",
    "python-dotenv>=1.0.0",
    "orjson>=3.9.0",
    "email-validator>=2.1.0",
    "Jinja2>=3.1.0",
    
    # Runtime extras required by core modules
    "numpy>=1.26.0",
    "PyYAML>=6.0.1",
    "psutil>=5.9.0",
    "cachetools>=5.3.0",
    "networkx>=3.2.0",
    "aiofiles>=23.2.1",
    "toml>=0.10.2",
    
    # File ingestion / parsing
    "python-docx>=1.1.0",
    "openpyxl>=3.1.2",
    "pypdf>=4.0.0",
    "beautifulsoup4>=4.12.0",
]

[project.optional-dependencies]
dev = [
    # Testing
    "pytest>=8.0.0",
    "pytest-asyncio>=0.23.0",
    "pytest-cov>=4.1.0",
    "pytest-xdist>=3.5.0",
    "hypothesis>=6.96.0",
    "polyfactory>=2.14.0",
    "respx>=0.20.0",
    "faker>=22.0.0",
    
    # Code Quality
    "ruff>=0.2.0",
    "mypy>=1.8.0",
    "pre-commit>=3.6.0",
    
    # Type Stubs
    "types-redis>=4.6.0",
    "types-passlib>=1.7.7",
]

ml = [
    # Machine Learning extras
    "scikit-learn>=1.4.0",
    "pandas>=2.2.0",
]

[project.urls]
Documentation = "https://github.com/resync/resync#readme"
Repository = "https://github.com/resync/resync"
Changelog = "https://github.com/resync/resync/blob/main/CHANGELOG.md"

[project.scripts]
resync = "resync.main:main"

[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
where = ["."]
include = ["resync*"]

# =============================================================================
# RUFF - Linting & Formatting (replaces Black, isort, Flake8)
# =============================================================================
[tool.ruff]
line-length = 100
target-version = "py310"
exclude = [
    ".git",
    ".venv",
    "__pycache__",
    "*.egg-info",
    "alembic/versions",
    ".mypy_cache",
    ".pytest_cache",
    ".ruff_cache",
]

[tool.ruff.lint]
select = [
    # Core
    "E",      # pycodestyle errors
    "W",      # pycodestyle warnings
    "F",      # pyflakes
    "I",      # isort
    "N",      # pep8-naming
    "UP",     # pyupgrade
    
    # Code Quality
    "B",      # flake8-bugbear
    "C4",     # flake8-comprehensions
    "SIM",    # flake8-simplify
    "PIE",    # flake8-pie
    "RET",    # flake8-return
    "PTH",    # flake8-use-pathlib
    
    # FastAPI/Async
    "ASYNC",  # flake8-async
    
    # Security
    "S",      # flake8-bandit (security)
    
    # Performance
    "PERF",   # perflint
]

ignore = [
    "E501",    # line too long (handled by formatter)
    "B008",    # function call in default argument (FastAPI Depends)
    "B904",    # raise from in except (sometimes verbose)
    "SIM105",  # contextlib.suppress
    "S101",    # assert in tests is fine
    "S104",    # bind to all interfaces (intentional in some cases)
    "S105",    # hardcoded password (false positives)
    "S106",    # hardcoded password in function arg
    "RET504",  # unnecessary assignment before return
]

[tool.ruff.lint.per-file-ignores]
"tests/*" = ["S101"]
"alembic/*" = ["E501"]

[tool.ruff.lint.isort]
known-first-party = ["resync"]
force-single-line = false
lines-after-imports = 2

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false
line-ending = "auto"

# =============================================================================
# MYPY - Type Checking
# =============================================================================
[tool.mypy]
python_version = "3.10"
warn_return_any = true
warn_unused_ignores = true
disallow_untyped_defs = false
check_untyped_defs = true
no_implicit_optional = true
warn_redundant_casts = true
warn_unused_configs = true
show_error_codes = true
show_column_numbers = true
plugins = ["pydantic.mypy"]
ignore_missing_imports = true

[[tool.mypy.overrides]]
module = ["tests.*", "alembic.*"]
disallow_untyped_defs = false

# =============================================================================
# PYTEST - Testing
# =============================================================================
[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]
asyncio_mode = "auto"
addopts = ["-v", "--tb=short", "--strict-markers", "-ra"]
markers = [
    "slow: marks tests as slow",
    "integration: marks tests as integration tests",
    "unit: marks tests as unit tests",
]
filterwarnings = [
    "ignore::DeprecationWarning",
    "ignore::PendingDeprecationWarning",
]

# =============================================================================
# COVERAGE - Test Coverage
# =============================================================================
[tool.coverage.run]
source = ["resync"]
branch = true
omit = ["*/tests/*", "*/__pycache__/*", "*/migrations/*"]

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "if TYPE_CHECKING:",
    "raise NotImplementedError",
    "if __name__ == .__main__.:",
    "@abstractmethod",
]
fail_under = 70
show_missing = true
